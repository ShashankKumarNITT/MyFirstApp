<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical"
    android:id="@+id/Layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice Sessn"
        android:layout_gravity="center"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:hint="Enter the speed"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/getVal"
        android:inputType="number"
        />

    <!-- Here is the second edit view  -->

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter the Lorentz value"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:id="@+id/getVal2"
        android:inputType="number"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Answer"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/showAns"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:text="Calculate Lorentz facor"
        android:id="@+id/ansBtn"/>

</LinearLayout>




